@model IEnumerable<AMS.Models.Scholarships>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccountant.cshtml";
}

<link href="~/css/table.css" rel="stylesheet" />


<div class="app-content">
    <h1 class="text-center">Scholarship Details</h1>

    <br/>
    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                Student Id
            </th>
            <th>
                First Name
            </th>
            <th>
                Last Name
            </th>
                
            <th>
                @Html.DisplayNameFor(model => model.Percentage)
            </th>
            
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StudentId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.FirstName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Student.LastName)
                </td>
                
                <td>
                    @Html.DisplayFor(modelItem => item.Percentage) %
                </td>
                
            </tr>
        }
        </tbody>
    </table>
</div>