@model IEnumerable<AMS.Models.Expenses>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccountant.cshtml";
}



<link href="~/css/table.css" rel="stylesheet" />
<div class="app-content">
    <h1 class="text-center">Academic Expense Information</h1>
    <br />


    <table class="table table-bordered table-hover">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Details)
            </th>
            <th>
                Amount
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Date)
            </th>

        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Details)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Amount) Tk
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Date)
                </td>
            </tr>
        }
        @*<tr>
                    <td>Total</td>
                    <td>@ViewBag.expenseTotal Tk</td>
                </tr>*@
        </tbody>
    </table>
    @*<h3>Total Expense: @ViewBag.expenseTotal Tk</h3>*@
</div>
