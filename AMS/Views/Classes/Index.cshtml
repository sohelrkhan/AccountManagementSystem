@model IEnumerable<AMS.Models.Classes>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutRegistrar.cshtml";
}

<link href="~/css/table.css" rel="stylesheet" />

<div class="app-content">
    <h1 class="text-center">Class Information</h1>
    <br /> 
    <a class="btn btn-success" asp-action="Create">+ Add Class</a>
    <br /> <br />

    <table class="table table-bordered table-hover">
        <thead>
            <tr>
               
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>                                            
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>                    
                    <td>
                        <a class="btn btn-secondary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-info btn-sm"  asp-action="Details" asp-route-id="@item.Id">Details</a> |
                        <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>