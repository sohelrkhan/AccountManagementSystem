@model AMS.Models.Students

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutRegistrar.cshtml";
}

<div class="app-content">
    <h1 class="text-center">Student Information</h1>
    <br />

    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Id" class="control-label">Student ID</label>
                    <input asp-for="Id" class="form-control" />
                    <span asp-validation-for="Id" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ClassId" class="control-label">Class</label>
                    <select asp-for="ClassId" class ="form-control" asp-items="ViewBag.ClassId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="GenderId" class="control-label">Gender</label>
                    <select asp-for="GenderId" class ="form-control" asp-items="ViewBag.GenderId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label">First Name</label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label">Last Name</label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdmittedYear" class="control-label">Admitted Year</label>
                    <input type="date" asp-for="AdmittedYear" class="form-control" />
                    <span asp-validation-for="AdmittedYear" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PresentAddress" class="control-label">Present Address</label>
                    <input asp-for="PresentAddress" class="form-control" />
                    <span asp-validation-for="PresentAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PermanentAddress" class="control-label">Permanent Address</label>
                    <input asp-for="PermanentAddress" class="form-control" />
                    <span asp-validation-for="PermanentAddress" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Dob" class="control-label">Date of Birth</label>
                    <input type="date" asp-for="Dob" class="form-control" />
                    <span asp-validation-for="Dob" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </form>
        </div>
    </div>

    <div>
        <a asp-action="Index">Back to List</a>
    </div>

</div>