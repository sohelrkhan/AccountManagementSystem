@model IEnumerable<AMS.Models.Students>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutAccountant.cshtml";
}
<link href="~/css/table.css" rel="stylesheet" />

<div class="app-content">
    <h1 class="text-center">Student Information</h1>
    <br /><br />

    <form asp-controller="Students" asp-action="IndexAP" class=" form-group">
        <div class="active-cyan-3 active-cyan-4 mb-4  row">
            <input class="form-control col-lg-3" type="text" placeholder="Student Id" aria-label="Search" name="id">
            <input type="submit" class="form-control col-md-2 ml-2 btn-primary btn-info" name="id" value="Search" />
        </div>
    </form> 
    <table class="table table-bordered table-hover">
        <thead>
            <tr>

                <th>
                    Student ID
                </th>
                <th>
                    First Name
                </th>
                <th>
                    Last Name
                </th>


                <th>
                    Present Address
                </th>

                <th>
                    DOB
                </th>

                <th>
                    @Html.DisplayNameFor(model => model.Class)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Gender)
                </th>

            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>


                    <td>
                        @Html.DisplayFor(modelItem => item.PresentAddress)
                    </td>

                    <td>
                        @Html.DisplayFor(modelItem => item.Dob)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Class.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Gender.Name)
                    </td>

                </tr>
            }
        </tbody>
    </table>
</div>