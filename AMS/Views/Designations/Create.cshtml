@model AMS.Models.Designations

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutRegistrar.cshtml";
}

<div class="app-content">
    <h1 class="text-center">Designation Information</h1>
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
